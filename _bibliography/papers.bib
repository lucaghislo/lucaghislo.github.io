@article{re_mixed-signal_2023,
  title    = {A mixed-signal processor for {X}-ray spectrometry and tracking in the {GAPS} experiment},
  volume   = {1045},
  url      = {https://www.sciencedirect.com/science/article/pii/S0168900222009093},
  urldate  = {2024-03-12},
  journal  = {Nuclear Instruments and Methods in Physics Research Section A: Accelerators, Spectrometers, Detectors and Associated Equipment},
  author   = {Re, Valerio and Ghislotti, Luca and Lazzaroni, Paolo and Manghisoni, Massimo and Riceputi, Elisa and Ratti, Lodovico and Boezio, Mirko and Zampa, Gianluigi and Fabris, Lorenzo},
  year     = {2023},
  note     = {Publisher: Elsevier},
  pages    = {167617},
  abstract = {This paper reports the design and experimental results from the characterization of an integrated circuit developed for the readout of
the X-ray spectrometer and tracking system of the General AntiParticle Spectrometer (GAPS) balloon mission. GAPS will search
for an indirect signature of dark matter through the detection of low-energy (<0.25 GeV/n) cosmic-ray antiprotons, antideuterons
and antihelium nuclei. The ASIC, named SLIDER32 (32 channels Si-LI DEtector Readout ASIC), was fabricated in a 180 nm
CMOS technology and is comprised of 32 analog readout channels, an 11-bit SAR ADC and a digital back-end section which is
responsible for defining channel settings and for sending digital information to the data acquisition system. The core of the ASIC is
a low-noise analog channel implementing a dynamic signal compression which makes the chip suitable for resolving both X-rays in
the range of 20 to 100 keV and charged particles with energy deposition of up to 100 MeV. It features an energy resolution of 4 keV
FWHM in the 20-100 keV range with a 40 pF detector capacitance, to clearly distinguish X-rays from antiprotonic or antideuteronic
exotic atoms. The readout electronics of the ASIC will run at a temperature of about -40 â—¦C, complying with a detector leakage
current of the order of 5-10 nA per strip.},
  preview  = {nima_book_large.jpg},
  selected = {true}
}

